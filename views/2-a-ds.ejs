<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/2-a-ds.css">
    <title>SISRAM</title>

    <style>
        body{
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0; 
    }
    header{
      background-color: rgb(53, 53, 255);
    }
    h1{
      color: white;
      background-color: rgb(53, 53, 255);
      text-align: center;
      font-size: 70px;
    }
    section{
      align-items: center;
      text-align: center;
    }
</style>

</head>
<body>
    <h3>Lista do 2°A-DS</h3>
    <p>Atestados Cadastrados no sistema</p>

            <table style="width: 50%">
                        <thead>
                                    <tr style="background-color: #ccc;">
                                                <th>ID</th>
                                                <th>Matrícula</th>
                                                <th>Nome do Aluno</th>
                                                <th>Curso</th>
                                                <th>Turma</th>
                                                <th>Data de Afastamento</th>
                                                <th>Período</th>
                                                <th>Imagem do Atestado</th>
                                                <th>Ações</th>
                                    </tr>
                        </thead>
                        <tbody>
                            <!--                            cd C:\Users\josia\Dropbox\9998877665554433221100
                            git remote set-url origin https://github.com/josiascordeiro/siram
                            git push -u origin master-->
                        <% if(!atestados2ads || atestados2ads.length == 0)
                        {%>
                                    <tr>
                                                <td colspan="8">Nenhum Cliente Cadastrado</td>
                                    </tr>
                        <% } else { 
                                     atestados2ads.forEach(function(atestados) { %>
                                                <tr>
                                                    <td><%= atestados.id %></td>
                                                    <td><%= atestados.matricula %></td>
                                                    <td><%= atestados.nome %></td>
                                                    <td><%= atestados.curso %></td>
                                                    <td><%= atestados.turma %></td>
                                                    <td><%= atestados.data_afast %></td>
                                                    <td><%= atestados.periodo %></td>
                                                    <td><img src="<%= atestados.img_atest %>" alt="Atestado"></td>

                                                    <td>
                                                  
                                                        <a href="/editar/<%= atestados.id %>">Editar</a> 
                                                        <a href="/deletar/<%= atestados.id %>" onclick="return confirm('Deseja realmente excluir o atestado?')">Deletar</a>
                                                       </td>
                                                  
                                                    

                                                        
                                                   
                                                   
                                                </tr>
                                            <% }) 
                                            }%>
                                        </tbody>
                                    </table>
                              
                        </tbody>

            </table>
    <footer>
        <div class="links">
            <div id="cont">
             <button href="/login">Continuar</button>
            </div>
            <div id="volt">
              <button href="/">Voltar</button>
            </div>
      </footer>

</body>
</html>